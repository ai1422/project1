.slider,.slider image,.slider swiper{
  width:100%;
  height:390rpx;
}

/*四个图标的样式*/
.navs{
  display:flex;
}
.nav-item{
  width:25%;
  display:flex;
  align-items: center;
  flex-direction: column;
  padding:20rpx;
}
.nav-item .nav-image{
  width:125rpx;
  height:125rpx;
  margin:5rpx;
}
.nav-item text{
  margin-top:5rpx;
  font-size:25rpx;
  color:gray;
}

/*商品列表*/
.call{
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
}
.call-item{
  width:48%;
  display:flex; 
  flex-direction: column;
  border:1rpx solid gray;
  justify-content:center;
  margin:5rpx;
}
.call-item .call-image{
  width:100%;
  height:360rpx;
}
.call-title{
  font-size:16px;
  margin-top:10rpx;
  padding:10rpx;
  border-bottom:1rpx dotted gray;
}
.call-shu{
  font-size:16px;
  color:red;
  font-weight:bold;
  padding:8rpx;
}