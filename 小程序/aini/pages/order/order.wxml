<!--pages/order/order.wxml-->
<view class="divider"></view>
<!--预约时间-->
<view class="cell">
  <view class="cell-item arrow">
    <text>预约时间：</text>
    <text class="elect">请选择</text>
  </view>
</view>
<view class="divider"></view>

<!--商品合计-->
<view class="shop">
  <view class="shop-item">
    <view class="shop-tiim">
      <image class="shop-image" src="{{order[0].img_url}}" mode="aspectFill" lazy-load></image>
      <text class="shop-title ell">{{order[0].title}}</text>
    </view>
    <view>
      <text class="shop-priec">￥{{order[0].pric}}</text>
    </view>
  </view>
</view>
<view class="total">
  <view class="total-item">
    <text>共<text class="total-title">1</text>件商品</text>
  </view>
  <view class="total-item">
    <text>合计</text>
    <text class="total-priec">￥{{order[0].pric}}</text>
  </view>
</view>
<view class="divider"></view>
<!--列表-->
<view class="cell">
  <navigator class="cell-item arrow">
      <text>会员卡</text>
   </navigator>
   <navigator class="cell-item arrow">
      <text>优惠卷</text>
   </navigator>
</view>
<view class="divider"></view>
<!--电话-->

<!--备注-->
<view class="cell">
  <navigator class="cell-item">
      <text>备注</text>
   </navigator>
</view>

<view class="divider"></view>
<!--商品金额-->
<view class="sum">
  <view class="sum-item">
    <text>商品金额</text>
  </view>
  <view class="sum-item">
    <text class="sum-priec">￥{{order[0].pric}}</text>
  </view>
</view>


<!--提交订单-->
<view class="vs">
  <view class="vs-item">
    <text class="item">实付款：</text>
    <text class="item">￥{{order[0].pric}}</text>
    <view class="dd">
      <text class="dd-item">提交订单</text>
    </view>
  </view>
</view>