/* pages/detail/detail.wxss */
/* image 图片 默认值 320*240*/
/* swiper 图片默认值 375*195*/
.slider,.slider image,.slider swiper{
    width:100%;
    height:500rpx;
}

/*商品标题*/
.ii{
    display:flex;
    flex-direction: column;
}
.shop-title{
    font-size:16px;
    font-weight: bold;
    padding:20rpx;
}

/*商品价格*/
.priceInfo{
    margin:20rpx 20rpx
}
.priceInfo .oldprice{
    color:#ccc;
    font-size:14px;
    text-decoration: line-through;
    margin-left:80rpx;
}
.priceInfo .newprice{
    color:red;
    font-size:16px;
    font-weight: bold;
}

/*库存  销量*/
.li{
    font-size:12px;
    color:#ccc;
    display:flex;
    justify-content: space-between;
    align-items: center;
    border-bottom:6rpx dotted #ccc;
    padding-bottom:20rpx;
}
.li-left{
    margin-left:20rpx;
}
.li-right{
    margin-right:30rpx;
}

/*店铺列表*/
.lie{
    margin:40rpx 0;
}
.lie-item{
    border-top:1rpx solid #ddd;
    margin-bottom:20rpx;
    padding:30rpx 30rpx;
    width:100%;
}
.lie text{
    color:#656565;
}
.line{
    height:400rpx;
}

/*底部订单 预约的样式*/
/*图标的样式*/
.vs{
    display:flex;
    position:fixed;
    bottom:0;
    width:100%;
  }
.navs{
    display:flex;
    width:30%;
    background-color:#fffbff;
    justify-content: space-around;
}
.nav-item{
    width:25%;
    display:flex;
    align-items: center;
    flex-direction: column;
    padding:5rpx;
}
.nav-item .nav-image{
    width:60rpx;
    height:60rpx;
    margin:5rpx;
}
.nav-item text{
    margin-top:10rpx;
    font-size:25rpx;
    color:gray;
}
  
/*预约样式*/
.nav{
    background-color:#FF4542;
    width:70%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.nav text{
    font-size:14px;
    color:#fff;
}
